{
  "compilerOptions": {
    "target": "ES2020",                           // ECMAScript version
    "module": "ESNext",                      // Module system for Node.js
    "outDir": "./dist",                        // Directory for compiled JavaScript
    "rootDir": "./src",                        // Directory for TypeScript source files
    "strict": true,                            // Enable strict type-checking
    "moduleResolution": "Node",
    "esModuleInterop": true,                   // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in file imports
    "skipLibCheck": true                       // Skip type checking for declaration files
  },
  "include": ["src/**/*"],                      // Include TypeScript files in src/
  "exclude": ["node_modules"]                   // Exclude node_modules
}
